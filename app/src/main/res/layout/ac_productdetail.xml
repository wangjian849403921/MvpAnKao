<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <include layout="@layout/detail_header"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.mvpankao.widget.CircleProgressView
        android:id="@+id/circle_progress"
        android:layout_width="@dimen/circle_progress_view_default_size"
        android:layout_height="@dimen/circle_progress_view_default_size"
        android:layout_gravity="center"
        app:Prog_barColor="@color/colorPrimary"
        app:Prog_barWidth="@dimen/circle_progress_view_default_border_width"/>
    <RelativeLayout
        android:id="@+id/rl_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="40dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f6f6ee"
                    >
                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        app:indicator_drawable_selected="@drawable/shape"
                        app:indicator_drawable_unselected="@drawable/shape2"
                        app:indicator_height="8dp"
                        app:indicator_margin="10dp"
                        app:indicator_width="8dp"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/ProductName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="110-550kv瓷套终端"
                            android:textColor="@color/centerTextColor"
                            android:textSize="@dimen/center_size"
                            />
                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/ProductName"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/ProductName"
                            android:text="库存量："
                            android:textColor="#666666"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:id="@+id/ProductCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/text"
                            android:layout_toRightOf="@+id/text"
                            android:text="2000"
                            android:textColor="@color/colorPrimary"
                            />
                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/ProductCount"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/ProductCount"
                            android:text="件"
                            android:textColor="#666666"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/ProductEnglishName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ankura-YJZWC4"
                        android:textColor="#999"
                        android:textSize="@dimen/center_size"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e8e8e8"/>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#f9f9f9"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e8e8e8"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已选"
                        android:textColor="#999"
                        android:textSize="12sp"

                        />

                    <TextView
                        android:id="@+id/SelectCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/more_selected"
                        android:gravity="center_vertical"
                        android:text="1 件"
                        android:textColor="@color/centerTextColor"
                        android:textSize="16sp"

                        />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e8e8e8"/>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#f9f9f9"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e8e8e8"/>

                <RelativeLayout
                    android:id="@+id/rl_SelectToWhere"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:padding="10dp"
                    >

                    <TextView
                        android:id="@+id/text_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="送至"
                        android:textColor="#666666"
                        android:textSize="12sp"

                        />


                    <TextView
                        android:id="@+id/SelectAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/text_to"
                        android:layout_marginLeft="10dp"

                        android:layout_toRightOf="@+id/text_to"
                        android:drawableRight="@drawable/more_selected"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxEms="20"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/centerTextColor"
                        android:textSize="16sp"

                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/SelectAddress"
                        android:layout_below="@+id/SelectAddress"

                        android:layout_marginTop="5dp"
                        android:text="现在下单预计5日内送达，7日内安装完成"
                        android:textColor="#ffaa00"
                        android:textSize="12sp"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e8e8e8"/>


                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#f9f9f9"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e8e8e8"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="产品详情"
                        android:textColor="@color/centerTextColor"
                        android:textSize="16sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#e8e8e8"
                        />

                    <TextView
                        android:id="@+id/note"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/Ordering"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#FFAA00"
                android:gravity="center"
                android:text="加入预订单"
                android:textColor="@color/white"
                android:textSize="@dimen/center_size"

                />

            <TextView
                android:id="@+id/order_rightaway"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#FF6600"
                android:gravity="center"
                android:text="立即订购"
                android:textColor="@color/white"
                android:textSize="@dimen/center_size"
                />
        </LinearLayout>
    </RelativeLayout>
    </FrameLayout>
</LinearLayout>

