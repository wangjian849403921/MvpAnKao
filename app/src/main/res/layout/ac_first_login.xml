<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#29d1bf"
             android:orientation="vertical"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="请选择您需要的平台"
        android:textColor="#fff"
        android:textSize="24sp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="105dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/button_yellow"-->
        <!--/>-->


        <android.support.v7.widget.CardView
            android:id="@+id/type1"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="280dp"
            app:cardBackgroundColor="#ffde7b"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="54dp"

                android:drawableRight="@drawable/first_change_arrow"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="“技”术共享平台"
                android:textColor="#333"
                android:textSize="17sp"/>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/type2"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#42e2ff"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="54dp"

                android:drawableRight="@drawable/first_change_arrow"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="“技”术共享平台"
                android:textColor="#333"
                android:textSize="17sp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/type3"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#fc7e65"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="54dp"

                android:drawableRight="@drawable/first_change_arrow"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="输电系统故障“诊”断平台"
                android:textColor="#333"
                android:textSize="17sp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/type4"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#53fdda"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="54dp"

                android:drawableRight="@drawable/first_change_arrow"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="抢“修”资源共享平台"
                android:textColor="#333"
                android:textSize="17sp"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>