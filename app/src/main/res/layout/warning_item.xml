<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fefefe"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/police_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/policehigh_light"

            />

        <LinearLayout
            android:id="@+id/ll_police"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/police_image"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/police_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"


                android:text="光纤温度过高"
                android:textColor="#333333"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/police_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"

                android:background="@drawable/policeshape"
                android:padding="2.5dp"
                android:text="待解除"
                android:textColor="#fff"
                android:textSize="11sp"

                />

            <ImageView
                android:id="@+id/police_logimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:layout_marginLeft="10dp"

                android:background="@drawable/policelog"
                android:padding="2dp"


                />
        </LinearLayout>

        <TextView
            android:id="@+id/police_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ll_police"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="电力部杭州机械设计研究所"
            android:textColor="#999"
            android:textSize="13sp"

            />

        <TextView
            android:id="@+id/police_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/police_name"
            android:layout_alignParentRight="true"
            android:text="2016-12-05"
            android:textColor="#999"
            android:textSize="13sp"

            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e8e8e8"
        />
</LinearLayout>
