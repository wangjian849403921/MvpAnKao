<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical">

    <include layout="@layout/common_header"/>

    <com.mvpankao.widget.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_default"
                    />

                <TextView
                    android:id="@+id/UserName"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#fff"


                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"

                    android:paddingRight="20dp"
                    android:text="杭州电力研究所"
                    android:textColor="#666"
                    android:textSize="18sp"
                    />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:divider="@drawable/line"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:showDividers="middle">


                <TextView
                    android:id="@+id/MyPredeterMine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/center_TextHeight"
                    android:background="#fff"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/icon_next_step"
                    android:gravity="center_vertical"
                    android:text="我的预约"
                    android:textColor="@color/centerTextColor"
                    android:textSize="@dimen/center_size"
                    />

                <TextView
                    android:id="@+id/MyRepair"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/center_TextHeight"
                    android:background="#fff"
                    android:drawableLeft="@drawable/repair"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/icon_next_step"
                    android:gravity="center_vertical"
                    android:text="我的报修"
                    android:textColor="@color/centerTextColor"
                    android:textSize="@dimen/center_size"
                    />

                <TextView
                    android:id="@+id/MyOrder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/center_TextHeight"
                    android:background="#fff"
                    android:drawableLeft="@drawable/order"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/icon_next_step"
                    android:gravity="center_vertical"
                    android:text="我的订购"
                    android:textColor="@color/centerTextColor"
                    android:textSize="@dimen/center_size"
                    />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:divider="@drawable/line"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:showDividers="middle">


                <TextView
                    android:id="@+id/WorkFlow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/center_TextHeight"
                    android:background="#fff"
                    android:drawableLeft="@drawable/workflow"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/icon_next_step"
                    android:gravity="center_vertical"
                    android:text="工作流"
                    android:textColor="@color/centerTextColor"
                    android:textSize="@dimen/center_size"
                    />

                <TextView
                    android:id="@+id/Setting"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/center_TextHeight"
                    android:background="#fff"
                    android:drawableLeft="@drawable/setting"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/icon_next_step"
                    android:gravity="center_vertical"
                    android:text="设置"
                    android:textColor="@color/centerTextColor"
                    android:textSize="@dimen/center_size"
                    />

                <TextView
                    android:id="@+id/FeedBack"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/center_TextHeight"
                    android:background="#fff"
                    android:drawableLeft="@drawable/feedback"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/icon_next_step"
                    android:gravity="center_vertical"
                    android:text="建议与反馈"
                    android:textColor="@color/centerTextColor"
                    android:textSize="@dimen/center_size"
                    />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/AboutUs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/center_TextHeight"
                android:background="#fff"
                android:drawableLeft="@drawable/aboutus"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/icon_next_step"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="关于安靠"
                android:textColor="@color/centerTextColor"
                android:textSize="@dimen/center_size"
                />
        </LinearLayout>
    </com.mvpankao.widget.BounceScrollView>
</LinearLayout>
