<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f8f8f8"
    android:orientation="vertical">


    <View
        android:id="@+id/view_0"
        android:layout_width="0.5dp"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/relative"
        android:layout_marginLeft="40dp"
        android:background="#bfbfbf"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_below="@+id/view_0"
        android:layout_marginLeft="34dp"
        android:src="@drawable/completeshape"/>

    <View
        android:id="@+id/view_2"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layerType="software"
        android:layout_alignBottom="@+id/relative"
        android:layout_below="@+id/image"
        android:layout_marginLeft="40dp"
        android:background="#bfbfbf"/>

    <!--<View-->
    <!--android:id="@+id/view_4"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:layout_alignBottom="@+id/view_2"-->
    <!--android:layout_marginLeft="55dp"-->
    <!--android:layout_marginRight="15dp"-->
    <!--android:background="#A6A6A6"/>-->

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/view_0"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="7dp"
            android:paddingLeft="5dp"
            android:text="需求提交成功"
            android:textColor="#333"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/title"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:text="2015-9-28"
            android:textColor="#c6c6c6"
            android:textSize="13sp"/>
